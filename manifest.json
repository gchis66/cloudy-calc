{
  "name": "Cloudy Calc",
  "version": "1.0.0",
  "description": "A versatile calculator for Chrome based on Cloudy Calculator",
  "manifest_version": 3,
  "icons": {
    "16": "icons/16.png",
    "19": "icons/19.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": "icons/19.png",
    "default_title": "Cloudy Calc",
    "default_popup": "popup.html"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://*.google.com/"],
  "background": {
    "service_worker": "js/background.js"
  },
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
